{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comments_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article by its id",
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "article_id": 1,
        "body": "Text from the article..",
        "created_at": "2024-08-27T17:41:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 10,
          "created_at": "2024-08-27T17:41:13.341Z",
          "author": "weegembump",
          "body": "Great article!",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment for the given article_id",
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "votes": 0,
        "created_at": "2024-08-27T17:41:13.341Z",
        "author": "butter_bridge",
        "body": "Great article!",
        "article_id": 1
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates the votes for a specific article by its id",
    "body": {
      "upd_votes": "integer"
    },
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "article_id": 1,
        "body": "Text from the article..",
        "created_at": "2024-08-27T17:41:13.341Z",
        "votes": 10,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the comment by its id",
    "exampleResponse": {
      "status": 204,
      "message": "No Content"
    }
  }
}
